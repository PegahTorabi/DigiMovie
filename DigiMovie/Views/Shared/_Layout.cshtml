<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - وب سایت دیجی مووی</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css" />
</head>
<body dir="rtl">
    <nav class="navbar navbar-default Menu navbar-fixed-top w3-bordered">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("وب سایت دیجی مووی", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-right">
                        <a href="@Url.Action("Index")">
                            <i class="glyphicon glyphicon-home"></i> صفحه اصلی
                        </a>
                    </li>
                    <li class="navbar-right">
                        <a href="@Url.Action("About")">
                            <i class="glyphicon glyphicon-tags"></i> درباره ی ما
                        </a>
                    </li>
                    <li class="navbar-right">
                        <a href="@Url.Action("Contact")">
                            <i class="	glyphicon glyphicon-magnet"></i> ارتباط با ما
                        </a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">حساب کاربری <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Register","Account")"><i class="glyphicon glyphicon-plus-sign"></i>    ساخت حساب کاربری  </a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Login","Account")"><i class="glyphicon glyphicon-ok-sign"></i>  ورود به حساب کاربری</a></li>
                            <li class="divider"></li>
                            <li><a href="#"><i class="glyphicon glyphicon-minus-sign"></i>  خروج از حساب کاربری  </a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <button type="submit" class="btn btn-default">جستجو</button>
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                </form>
            </div>
        </div>
    </nav>
    <br style="line-height:25px;" />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="w3-container w3-border w3-border-black w3-round w3-padding w3-margin-bottom">
                <span class="w3-left"> حقوق مادی و معنوی محفوظ است.</span>
                <span class="w3-right">
                    <i class="fa fa-mobile"></i>
                    <i class="fa fa-tablet"></i>
                    <i class="fa fa-desktop"></i>
                </span>
                <div class="w3-clear"></div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
